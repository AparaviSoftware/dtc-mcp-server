# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.{py,pyi}]
indent_style = space
indent_size = 4

# JavaScript files
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Documentation
[*.{md,txt,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Config files
[*.{yml,yaml,toml,ini}]
indent_style = space
indent_size = 2
